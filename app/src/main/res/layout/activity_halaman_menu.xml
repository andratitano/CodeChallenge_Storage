<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6DBEA"
    tools:context=".HalamanMenu">

    <TextView
        android:id="@+id/tv_hal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Pilih Lawanmu"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_hal_1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/landing2"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hal_1"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ervin"
        app:layout_constraintStart_toStartOf="@id/iv_hal_1"
        app:layout_constraintEnd_toEndOf="@id/iv_hal_1"
        app:layout_constraintTop_toBottomOf="@id/iv_hal_1" />



    <ImageView
        android:id="@+id/iv_hal_2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/landing1"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />

    <TextView
        android:id="@+id/username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabrina"
        app:layout_constraintStart_toStartOf="@id/iv_hal_2"
        app:layout_constraintEnd_toEndOf="@id/iv_hal_2"
        app:layout_constraintTop_toBottomOf="@id/iv_hal_2" />

    <ImageView
        android:id="@+id/btnProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_width="64dp"
        android:layout_height="64dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>