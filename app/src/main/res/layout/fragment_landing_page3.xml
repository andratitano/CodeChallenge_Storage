<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LandingPage3">

    <ImageView
        android:id="@+id/iv_landing3"
        android:src="@drawable/landing3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_landing3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_landing3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:text="Tuliskan namamu di bawah" />

    <EditText
        android:id="@+id/et_landing3"
        android:layout_width="256dp"
        android:inputType="text"
        android:background="#fff"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:hint="nama"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_landing3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#758BDC"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/et_landing3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="SUBMIT"/>

</androidx.constraintlayout.widget.ConstraintLayout>